#include"stdio.h"
#include"string.h"
int main ()
{
	int count=0;
	char c[]="It is not easy when you want to make something change but if it is easy that everyone can make it";
	for(int i=0;i<sizeof(c);i++)
	{
		printf("%c",c[i]);
		
			if((c[i]=='i'||c[i]=='I')&& c[i+1]=='t')
			count++;
	}	
	printf("it的个数有%d个\n",count);
		return 0;
}
